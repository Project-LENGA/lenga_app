<div class="center jumbotron">
  <h1><%= t('.welcome') %></h1>
  <%= I18n.available_locales %>
  <p><%= t(:message) %></p>
  
  <% if current_user %>
    <div>Hey <%= current_user.name %></div>
    <%= image_tag(current_user.image) %>
  <% end %>
  <% unless current_user %>
    <%= link_to t('.sign_up'), user_facebook_omniauth_authorize_path %>
  <% else %>
    <%= link_to "Logout", destroy_user_session_path, method: :delete %>
  <% end %>

</div>

<%= link_to image_tag("lenga_logo.png", alt:"lenga logo"), root_path %>

